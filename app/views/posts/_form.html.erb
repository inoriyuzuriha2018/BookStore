<% content_for :content_js do %>
  <%= custom_bootstrap_flash %>
<% end %>

<%= form_with(model: post) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div>
    <%= form.label :is_public %>
    <%= form.select :is_public, Post.is_publics.keys.map { |k| [k.humanize, k] } %>
  </div>
	<div>
		<%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, id: "category" %>
  </div>
	<div>
    <%= form.submit%>
  </div>
<% end %>