<div class="header">
	<div class="header-left">
		<a href="#default" class="logo">CompanyLogo</a>
	</div>
  <div class="header-right">
    <%= link_to "Category", categories_path %>
    <%= link_to "Post", posts_path %>
    <% if user_signed_in? %>
      <%= link_to destroy_user_session_path,  data: { turbo_method: :delete }, method: :delete do %>
        <%= icon 'fa-solid', 'door-closed' %>
      <% end %>    
    <% else %>
      <%= link_to new_user_session_path do %>
        <%= icon 'fa-solid', 'door-open' %>
      <% end %>
    <% end %>
  </div>
</div>